<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/padding_5dp"
    android:weightSum="3.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_weight="0.6"
        android:clickable="true"
        android:focusable="true">

        <Button
            android:id="@+id/btn_share_button"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:background="@drawable/btn_share" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_30dp"
            android:paddingRight="@dimen/padding_30dp"
            android:text="@string/label_achievement_room"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_25sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_achievement_medicine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_weight="0.7"
        android:background="@drawable/achievement_button"
        android:gravity="center"
        android:text="@string/label_first_achievement"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_achievement_qa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_weight="0.7"
        android:background="@drawable/achievement_button"
        android:gravity="center"
        android:text="@string/label_second_achievement"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_achievement_trip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_weight="0.7"
        android:background="@drawable/achievement_button"
        android:gravity="center"
        android:text="@string/label_third_achievement"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_15sp"
        android:textStyle="bold" />
</LinearLayout>
