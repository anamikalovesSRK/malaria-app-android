<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_screen_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/padding_2dp">

        <Button
            android:id="@+id/warningButton"
            android:layout_width="@dimen/size_24dp"
            android:layout_height="@dimen/size_24dp"
            android:layout_margin="@dimen/margin_5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/warning"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/warningView"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="@dimen/padding_2dp"
            android:text="@string/label_medicine_ending"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/fragment_home_screen_set_tone_button"
            android:layout_width="@dimen/size_24dp"
            android:layout_height="@dimen/size_24dp"
            android:layout_margin="@dimen/margin_5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_action_volume_on"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_size_40sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary" />

    <TextView
        android:id="@+id/tv_current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:scaleType="fitCenter"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/size_140dp"
        android:layout_height="@dimen/size_140dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/drug_normal"
        android:contentDescription="@string/description_med_status"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reject_medication"
            style="?android:borderlessButtonStyle"
            android:layout_width="@dimen/size_72dp"
            android:layout_height="@dimen/size_72dp"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:layout_marginRight="@dimen/margin_24dp"
            android:adjustViewBounds="true"
            android:background="@drawable/reject_medi_checked" />

        <Button
            android:id="@+id/btn_accept_medication"
            style="?android:borderlessButtonStyle"
            android:layout_width="@dimen/size_72dp"
            android:layout_height="@dimen/size_72dp"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:layout_marginStart="@dimen/margin_24dp"
            android:adjustViewBounds="true"
            android:background="@drawable/accept_medi_checked_"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>