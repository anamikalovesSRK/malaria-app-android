<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_10dp"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_exit"
                style="@style/style_btn_background"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_40dp"
                android:layout_gravity="end"
                android:layout_weight="0.4"
                android:text="@string/label_exit" />

            <TextView
                android:id="@+id/tv_total_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center_horizontal"
                android:text="@string/label_myth_fact_total_score"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_25sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_next"
                style="@style/style_btn_background"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_40dp"
                android:layout_weight="0.4"
                android:text="@string/label_next" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="@dimen/width_200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="@dimen/padding_10dp"
                android:text="@string/label_question"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/chest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_weight="0.8"
            android:background="@drawable/chest"
            android:gravity="center"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/trash"
            android:gravity="center"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>