<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relatively"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="@dimen/margin_16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_40dp"
            android:text="@string/label_rapid_fire_total_score"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="@dimen/height_40dp"/>
        <TextView
            android:id="@+id/tv_timers"
            android:layout_width="wrap_content"
            android:padding="@dimen/padding_4dp"
            android:layout_height="@dimen/height_40dp"
            android:text="@string/label_myth_fact_total_score"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_rapid_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="center"
                android:text="@string/description_rapid_fire_question"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_5dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_rapid_option_one"
                android:layout_width="@dimen/width_200dp"
                android:layout_height="@dimen/height_50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/description_rapid_fire_answer"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_rapid_option_two"
                android:layout_width="@dimen/width_200dp"
                android:layout_height="@dimen/height_50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/description_rapid_fire_answer"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_rapid_option_three"
                android:layout_width="@dimen/width_200dp"
                android:layout_height="@dimen/height_50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/description_rapid_fire_answer"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_rapid_fire_exit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:background="@drawable/button_background"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp"
        android:text="@string/label_exit"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold" />
</LinearLayout>