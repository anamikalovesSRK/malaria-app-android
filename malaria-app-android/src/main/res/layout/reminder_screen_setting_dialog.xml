<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="center"
            android:text="@string/label_settings"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_25sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_weight="0.96"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/time"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/hint_eg_7"
            android:inputType="number"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/lightgray02" />

        <TextView
            android:id="@+id/warning_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20dp"
            android:text="@string/label_sample_text"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/label_set"
            android:textColor="@color/textColorPrimary" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/label_cancel"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</LinearLayout>