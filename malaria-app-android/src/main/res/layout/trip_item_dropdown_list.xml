<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogReset"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:id="@+id/heading_day_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightest_brown"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dayDialogTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="center"
            android:text="@string/label_select_pill"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tripDrugDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/tripDrugDialogList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cream"

            android:dividerHeight="@dimen/height_1dp"
            android:headerDividersEnabled="true"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</LinearLayout>
